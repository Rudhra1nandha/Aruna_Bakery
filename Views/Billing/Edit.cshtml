        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    <a href="/Billing/Index" style="color:cornflowerblue;font-weight:500;font-size:15px;">Back to Billing details</a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
