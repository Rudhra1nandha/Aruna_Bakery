@model Aruna_Bakery_WithoutEntity.Models.Billing


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4 style="text-align:center;margin-top:5%;font-size:30px;font-weight:800;color:sandybrown">Update Billing Data</h4>
